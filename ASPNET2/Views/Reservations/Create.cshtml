@model MVC.Models.Reservation

@{
    ViewData["Title"] = "Create";
    ViewBag.Hour = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <script type="text/javascript">
        
    </script>
</head>
<body>

<h4>Booking for room: @ViewBag.Room.Name</h4>
<b>Room description:</b> @ViewBag.Room.Description
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="calendar-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" onchange="onCalendarChange(@ViewBag.Room.Id)" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" asp-route-roomId="@ViewBag.Room.Id" asp-route-hour="0" id="submit" class="btn btn-default" disabled="disabled" />
            </div>
        </form>
    </div>
    <div id="hours" class="col-md-4">
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Rooms">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
